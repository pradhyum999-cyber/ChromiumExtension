{
  "manifest_version": 3,
  "name": "WebExtension Dashboard",
  "description": "Cross-browser extension for Chrome and Edge using Manifest V3",
  "version": "3.0.1",
  "author": "Your Name or Company",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Web Extension Dashboard"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.example.com/*", 
        "*://*.example.org/*",
        "*://*.google.com/*",
        "*://*.microsoft.com/*",
        "*://*.github.com/*",
        "*://*.dynamics.com/*",
        "*://*.crm.dynamics.com/*",
        "*://*.crm1.dynamics.com/*",
        "*://*.crm2.dynamics.com/*",
        "*://*.crm3.dynamics.com/*",
        "*://*.crm4.dynamics.com/*",
        "*://*.crm11.dynamics.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "tabs",
    "cookies", 
    "webNavigation",
    "scripting",
    "bookmarks",
    "notifications"
  ],
  "host_permissions": [
    "*://*.example.com/*",
    "*://*.example.org/*",
    "*://*.google.com/*",
    "*://*.microsoft.com/*",
    "*://*.github.com/*",
    "*://*.dynamics.com/*",
    "*://*.crm.dynamics.com/*",
    "*://*.crm1.dynamics.com/*",
    "*://*.crm2.dynamics.com/*",
    "*://*.crm3.dynamics.com/*",
    "*://*.crm4.dynamics.com/*",
    "*://*.crm11.dynamics.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": [
        "*://*.example.com/*", 
        "*://*.example.org/*",
        "*://*.google.com/*",
        "*://*.microsoft.com/*",
        "*://*.github.com/*",
        "*://*.dynamics.com/*",
        "*://*.crm.dynamics.com/*",
        "*://*.crm1.dynamics.com/*",
        "*://*.crm2.dynamics.com/*",
        "*://*.crm3.dynamics.com/*",
        "*://*.crm4.dynamics.com/*",
        "*://*.crm11.dynamics.com/*"
      ]
    }
  ],
  "minimum_chrome_version": "88",
  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_address_bar": true
    }
  },
  "incognito": "spanning",
  "offline_enabled": true,
  "short_name": "WebExt",
  
  "commands": {
    "execute-script": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Execute a script in the current tab"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Open the extension popup"
    }
  }
}
