{
  "manifest_version": 3,
  "name": "WebExtension Dashboard",
  "description": "Cross-browser extension for Chrome and Edge using Manifest V3",
  "version": "3.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.example.com/*", "*://*.example.org/*"],
      "js": ["content-script.js"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "tabs",
    "cookies"
  ],
  "host_permissions": [
    "*://*.example.com/*",
    "*://*.example.org/*"
  ]
}
